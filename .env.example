# Telegram
TELEGRAM_TOKEN=your_telegram_bot_token_here
ADMIN_CHAT_ID=your_admin_chat_id_here

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

# Elasticsearch
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200

# Prometheus
PROMETHEUS_URL=http://prometheus:9090

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Milvus
MILVUS_HOST=milvus
MILVUS_PORT=19530

# AI / LLM (OpenAI-совместимый API)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-4.1-mini

# Legacy AI endpoints (optional)
LLM_ENDPOINT=http://localhost:8080
CHRONOS_ENDPOINT=http://localhost:8081

# Ansible
ANSIBLE_INVENTORY_PATH=/etc/ansible/hosts
ANSIBLE_PLAYBOOK_DIR=/app/data/playbooks

# Proxmox (Optional)
PROXMOX_HOST=your_proxmox_host
PROXMOX_USER=root@pam
PROXMOX_TOKEN_NAME=your_token_name
PROXMOX_TOKEN_VALUE=your_token_value
PROXMOX_VERIFY_SSL=false

# MikroTik (Optional)
MIKROTIK_HOST=your_mikrotik_host
MIKROTIK_USER=admin
MIKROTIK_PASSWORD=your_password
MIKROTIK_PORT=8728

# System
LOG_LEVEL=INFO
ENVIRONMENT=development

# Feature Flags
ENABLE_AUTO_REMEDIATION=false
ENABLE_CHATBOT_NL=true
