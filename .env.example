# ==================== AIOps Configuration ====================
# Скопируйте этот файл в .env и заполните значения

# ==================== Telegram ====================
TELEGRAM_TOKEN=your_telegram_bot_token_here
ADMIN_CHAT_ID=your_admin_chat_id_here

# ==================== API Server ====================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

# ==================== Elasticsearch ====================
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200

# ==================== Prometheus ====================
PROMETHEUS_URL=http://prometheus:9090

# ==================== Redis ====================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_CACHE_DB=1
REDIS_STREAMS_DB=2
REDIS_NOTIFICATIONS_DB=3

# ==================== Milvus ====================
MILVUS_HOST=milvus
MILVUS_PORT=19530

# ==================== AI / LLM ====================
# Primary: OpenAI API (или совместимый)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-4.1-mini

# Fallback: Ollama (локальная LLM)
OLLAMA_BASE_URL=http://ollama:11434/v1
OLLAMA_MODEL=llama3.2
OLLAMA_ENABLED=true

# Cache TTLs (seconds)
CACHE_TTL_ANALYSIS=600
CACHE_TTL_PLAYBOOK=1800
CACHE_TTL_NL=300

# Legacy AI endpoints (optional)
LLM_ENDPOINT=http://localhost:8080
CHRONOS_ENDPOINT=http://localhost:8081

# ==================== Circuit Breaker ====================
CB_FAILURE_THRESHOLD=5
CB_TIMEOUT=60
CB_SUCCESS_THRESHOLD=2

# ==================== Ansible ====================
ANSIBLE_INVENTORY_PATH=/etc/ansible/hosts
ANSIBLE_PLAYBOOK_DIR=/app/data/playbooks

# ==================== Proxmox (Optional) ====================
PROXMOX_HOST=your_proxmox_host
PROXMOX_USER=root@pam
PROXMOX_TOKEN_NAME=your_token_name
PROXMOX_TOKEN_VALUE=your_token_value
PROXMOX_VERIFY_SSL=false

# ==================== MikroTik (Optional) ====================
MIKROTIK_HOST=your_mikrotik_host
MIKROTIK_USER=admin
MIKROTIK_PASSWORD=your_password
MIKROTIK_PORT=8728

# ==================== UniFi (Optional) ====================
UNIFI_HOST=
UNIFI_USER=admin
UNIFI_PASSWORD=
UNIFI_SITE=default

# ==================== Notifications ====================
# Email (SMTP)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=
EMAIL_TO=

# Slack
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#alerts

# PagerDuty
PAGERDUTY_ROUTING_KEY=
PAGERDUTY_SERVICE_ID=

# Custom Webhook
CUSTOM_WEBHOOK_URL=

# ==================== Alertmanager ====================
ALERTMANAGER_URL=http://alertmanager:9093
ALERTMANAGER_WEBHOOK_ENABLED=true

# ==================== Streaming ====================
STREAMING_ENABLED=true
STREAMING_BATCH_SIZE=100
STREAMING_FLUSH_INTERVAL=5

# ==================== System ====================
LOG_LEVEL=INFO
ENVIRONMENT=development
DATABASE_URL=sqlite:///./aiops.db

# ==================== Feature Flags ====================
ENABLE_AUTO_REMEDIATION=false
ENABLE_CHATBOT_NL=true
ENABLE_LLM_FALLBACK=true
ENABLE_CACHING=true
ENABLE_NOTIFICATIONS=true
